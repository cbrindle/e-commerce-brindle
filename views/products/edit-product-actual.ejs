<!DOCTYPE html>
<html lang="en">

<% include ../partials/head %>

<body>
    <% include ../partials/nav %>
    <br><br>
    <% console.log(product) %>

    <form class="form-signin" method="POST" action="/api/admin/editproduct/<%= product.category._id %>/<%= product._id %>">
    
        <label for="inputName" class="sr-only">Name</label>
        <input type="text" id="inputName" class="form-control" placeholder="Name" name="name"
            value="<%= product.name %>">
    
        <br />
        <label for="inputPrice" class="sr-only">Price</label>
        <input type="text" id="inputPrice" class="form-control" placeholder="Prince" name="price"
            value="<%= product.price %>">
    
        <br />
        <label for="inputCategory" class="sr-only">Category</label>
        <input type="text" id="inputCategory" class="form-control" placeholder="Category" name="category"
            value="<%= product.category.name %>">
    
        <br />
        <button class="btn btn-lg btn-primary btn-block" type="submit">Update Product</button>
    
    </form>



    <% include ../partials/footer %>
</body>

</html>