<form class="form-signin" method="POST" action="/api/users/profile?_method=PUT">

    <label for="inputName" class="sr-only">Name</label>
    <input type="text" id="inputName" class="form-control" placeholder="name" name="name">

    <br />
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="text" id="inputEmail" class="form-control" placeholder="email" name="email">

    <br />
    <label for="inputAddress" class="sr-only">Address</label>
    <input type="text" id="inputAddress" class="form-control" placeholder="address" name="address">

    <br />
    <label for="inputPassword" class="sr-only">Old Password</label>
    <input type="text" id="inputPassword" class="form-control" placeholder="Old Password" name="password">

    <br />
    <label for="inputPassword" class="sr-only">New Password</label>
    <input type="text" id="inputPassword2" class="form-control" placeholder="New Password" name="password2">

    <br />
    <label for="inputPassword" class="sr-only">Confirm Password</label>
    <input type="text" id="inputPassword3" class="form-control" placeholder="Confirm Password" name="password3">

    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Update Profile</button>

</form>