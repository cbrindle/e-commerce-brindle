<!DOCTYPE html>
<html>
    <% include ../partials/head %>

<body>
    <% include ../partials/nav %>

    <div class="container" style="margin-top: 10%">

        <% for (s of success) { %>
            <div class="alert alert-success alert-dismissible text-center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span area-hidden="true">&times;</span>
                </button>
                <%= s %>
            </div>
            <% } %>
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%">cartItem</th>
                    <th style="width:10%">Price</th>
                    <th style="width:8%">Quantity</th>
                    <th style="width:22%" class="text-center">Subtotal</th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            <tbody>

                <% for (let i = 0; i < carts.items.length; i++) { %>

                <tr>
                    <td data-th="cartItem">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs">
                                <img style="height: 100px; width: 100px" src="/images/placeholder.jpg" alt="..." class="img-responsive" />
                            </div>
                            <div class="col-sm-10" style="padding-left: 15%">
                                <h6 class="nomargin"><i>Item</i> <%= parseInt([i]) + 1%></h6>
                                <p style="font-size: 1.5em;"><%= carts.items[i].item.name %></p>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">$ <%= carts.items[i].item.price %></td>
                    <td data-th="Quantity">
                        <div class="text-center"><%= carts.items[i].quantity %></div>
                    </td>
                    <td data-th="Subtotal" class="text-center">$ <%= carts.items[i].price %></td>
                    <td class="actions" data-th="">
                        <form method="POST" action='/api/cart/remove?_method=DELETE'>
                            <input type="hidden" name="item" value="<%= carts.items[i]._id %>">
                            <input type="hidden" name="price" value="<%= carts.items[i].price %>">
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>

                </tr>

                <% } %>

            </tbody>
            <tfoot>

                <tr>
                    <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                    <td colspan="2" class="hidden-xs"></td>

                    <td class="hidden-xs text-center"><strong>Total $<%= carts.total  %></strong></td>
                    <td><a href="#"><i onmouseover="changeColor(event)" onmouseout="colorBack(event)" class="far fa-credit-card fa-3x" style="color: purple;" data-toggle="modal"
                                data-target="#exampleModal"></i></a></td>
                                
                </tr>
            </tfoot>
        </table>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="modal-title" id="exampleModalLabel">Please enter your card information</h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="row">
                                <div class="col">

                                    <!-- CREDIT CARD FORM STARTS HERE -->
                                    <div class="panel panel-default credit-card-box">
                                        <div class="panel-heading display-table">
                                            <div class="row display-tr">
                                                <h3 class="panel-title display-td">Payment Details</h3>
                                                <div class="display-td">
                                                    <img class="img-responsive pull-right" src="http://i76.imgup.net/accepted_c22e0.png">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel-body">
                                            <form role="form" id="payment-form">
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="form-group">
                                                            <label for="cardNumber">CARD NUMBER</label>
                                                            <div class="input-group">
                                                                <input type="tel" class="form-control" name="cardNumber" placeholder="Valid Card Number"
                                                                    autocomplete="cc-number" required autofocus />
                                                                <span class="input-group-addon"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="form-group">
                                                            <label for="cardExpiry"><span class="hidden-xs">EXPIRATION</span><span
                                                                    class="visible-xs-inline">EXP</span> DATE</label>
                                                            <input type="tel" class="form-control" name="cardExpiry" placeholder="MM / YY"
                                                                autocomplete="cc-exp" required />
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <div class="form-group">
                                                            <label for="cardCVC">CV CODE</label>
                                                            <input type="tel" class="form-control" name="cardCVC" placeholder="CVC"
                                                                autocomplete="cc-csc" required />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col justify-content-center">
                                                        <button class="btn btn-success btn-lg btn-block text-center" type="submit">Pay $<%= carts.total %></button>
                                                    </div>
                                                </div>
                                                <div class="row" style="display:none;">
                                                    <div class="col-xs-12">
                                                        <p class="payment-errors"></p>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <!-- CREDIT CARD FORM ENDS HERE -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
    function changeColor(event) {
        event.target.style.color = "brown"
    }
    function colorBack(event) {
        event.target.style.color = "purple"
    }
    </script>
</body>

</html>